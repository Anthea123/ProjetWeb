= form_for @subject do
	%p 
		Titre
		%input{:type => "text", :name => "title", :value => @subject.title}
	%p 
		Date de début
		%input{:type => "date", :name => "start_date", :value => @subject.start_date}
	%p 
		Date de fin
		%input{:type => "date", :name => "end_date", :value => @subject.end_date}
	- if @subject.persisted?
		%p
			%input{:type => "submit", :value => "Modifier la matière"}
	- else
		%p
			%input{:type => "submit", :value => "Ajouter la matière"}  
