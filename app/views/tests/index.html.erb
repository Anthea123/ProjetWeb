<p id="notice"><%= notice %></p>

<h1>Épreuves</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date</th>
      <th>Matière</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.test_date %></td>
        <td><%= Subject.where(id: test.subject_id).first.title%></td>
        <td><%= link_to 'Voir', test %></td>
        <% if @current_user.teacher? %> 
          <td><%= link_to 'Modifier', edit_test_path(test) %></td>
          <td><%= link_to 'Supprimer', test, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @current_user.teacher? %>
  <%= link_to 'Créer une épreuve', new_test_path %>
<% end %>

